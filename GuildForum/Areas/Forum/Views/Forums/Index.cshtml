@using GuildForum.Areas.Forum.Models;
@model IEnumerable<ForumSection>

@{
    ViewBag.Title = "Index";
}

<h2>Forums</h2>

<div class="row">
    @foreach (ForumSection forumSection in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">@forumSection.Title</div>
            <table class="table">
                <tbody class="table-striped">
                    @foreach (Forum forum in forumSection.Forums)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(forum.Title, "Threads", new { id = forum.ID })
                            </td>
                            <td>
                                @forum.SubTitle
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>